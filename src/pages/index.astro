<style>
	.langs{
		height: 46px;
		display: flex;
		& a {
			transition: background 250ms ease-in-out;
			display: flex;
			align-items: center;
			padding: 0 8px;
			color: white;
			text-decoration: none;
			height: 100%;
			background: purple;
		}
		& a:hover{
			background:  rgb(161, 230, 161);;
		}
	}
